<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campground" method="POST" class="validated-form" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control type=" text" name="campground[location]" id="location" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" value="campground.image" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div> 
                </div> -->
                <div class="mb-3">
                    <div class="input-group">
                        <label for="price" class="form-label">Campground Price</label>
                        <span class="input-group-text" id="price-label">@</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" required
                            aria-label="Username" aria-describedby="price-label" name="campground[price]">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control type=" text" name="campground[description]" required
                        id="description"></textarea>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <label for="image">Select image(s)..</label>
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <!-- <label for="image" class="form-file-label">
                            <span class="form-file-text custom-file-label">Choose image(s)..</span>
                            <span class="form-file-button">Browse</span>
                        </label> -->
                    </div>
                </div>
                <button class="btn btn-success">Add Campground</button>
            </form>
        </div>
    </div>